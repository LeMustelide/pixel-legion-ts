{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Output directory for build */
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "pixel-legion-game-logic": ["../game-logic/src"]
    }
  }
}
